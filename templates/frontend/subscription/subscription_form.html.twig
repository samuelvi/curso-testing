<div id="subscription_wrapper" style="min-height: 100%; height: 100%;">

    <div class="form_errors">
        {{ form_errors(form) }}
    </div>

    {{ form_start(form, {'action': url('subscription_add'),
        'method': 'POST',
        'attr': {'role': 'form', 'id': 'subscription_form', 'novalidate': 'novalidate'}}) }}
    {# <form action="{{ url('subscription_add') }}" method="POST" role="form" id="subscription_form" novalidate> #}


    <div class=" p-4">

        <div class="row">
            {{ form_label(form.email, 'E-mail *') }}
        </div>
        <div class="row">
            {{ form_widget(form.email, {'attr': {'class': 'w-100'}}) }}
            <div class="has-error">{{ form_errors(form.email) }}</div>
        </div>

        <div class="row mt-4">
            {{ form_label(form.fullname, 'Full Name *') }}
        </div>
        <div class="row">
            {{ form_widget(form.fullname, {'attr': {'class': 'w-100'}}) }}
            <div class="has-error">{{ form_errors(form.fullname) }}</div>
        </div>

        <div class="row mt-4">
            {{ form_widget(form.legal, {'attr': {'id': 'subscription_type_legal', 'class': 'mr-2 mt-1'}}) }}

            {{ form_label(form.legal, 'Accept terms and conditions *') }}
            <div class="has-error">{{ form_errors(form.legal) }}</div>
        </div>

        <div class="row">
            <button class="btn btn-primary btn-action" role="button" id="subscription_button">Request Subscription Registration</button>
        </div>

    </div>

    {# {{ form_rest(form) }} #}
    {# </form> #}
    {{ form_end(form) }}
</div>


<script src="{{ asset('assets/js/subscription.js') }}"></script>
<script>
    $(document).ready(function () {

        var submitFormManager = new SubmitFormManager({formId: 'subscription_form'});
        submitFormManager.initialize();
    });
</script>

